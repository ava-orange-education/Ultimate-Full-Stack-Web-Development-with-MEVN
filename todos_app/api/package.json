  "main": "index.ts",
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "cross-env NODE_ENV='development' nodemon",
    "build": "webpack",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build-test": "cross-env NODE_ENV='test' webpack",
    "build-prod": "cross-env NODE_ENV='production' webpack --progress",
    "run:prod": "cross-env NODE_ENV='production' PORT=3080 MONGO_CONNECTION_STR='mongodb+srv://bhargavbook58:tester12345@todos.usujbgr.mongodb.net/todos?retryWrites=true' node dist/api.bundle.js",
    "test": "jest",
    "prepare": "husky install",
    "build:backend": "npm run build",
    "build:frontend": "cd ../ui && npm run build",
    "copy:frontend": "ncp ../ui/dist ./dist/public",
    "copy:ssl": "ncp ./ssl ./dist/ssl/",
    "zip:dist": "bestzip dist.zip ./api/build/*",
    "zip-build": "npm run build:backend && npm run build:frontend && npm run copy:frontend && npm run copy:ssl && npm run zip:dist"
  },
